{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "composite": false,
    "noEmit": true,
    "module": "ESNext",
    "allowImportingTsExtensions": true,
    "moduleResolution": "Bundler",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
