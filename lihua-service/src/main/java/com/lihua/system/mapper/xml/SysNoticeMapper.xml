<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lihua.system.mapper.SysNoticeMapper">

    <resultMap id="findByIdMap" type="com.lihua.system.model.vo.SysNoticeVO">
        <result column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="type" property="type"/>
        <result column="user_scope" property="userScope"/>
        <result column="status" property="status"/>
        <result column="priority" property="priority"/>
        <result column="content" property="content"/>
        <result column="remark" property="remark"/>
        <collection property="userIdList" ofType="java.lang.String">
            <result column="user_id"/>
        </collection>
    </resultMap>

    <select id="findById" resultMap="findByIdMap">
        SELECT
            sys_notice.id,
            sys_notice.title,
            sys_notice.type,
            sys_notice.status,
            sys_notice.priority,
            sys_notice.user_scope,
            sys_notice.content,
            sys_notice.remark,
            sys_user_notice.user_id
        FROM
            sys_notice
        LEFT JOIN sys_user_notice ON sys_notice.id = sys_user_notice.notice_id
        WHERE sys_notice.id = #{id}
    </select>
</mapper>